<UserControl x:Class="MyProject.Регистрация"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:MyProject"
             mc:Ignorable="d" 
             d:DesignHeight="209" d:DesignWidth="400"
             Background="White">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="10"/>
            <RowDefinition Height="40"/>
            <RowDefinition Height="40"/>
            <RowDefinition Height="40"/>
            <RowDefinition Height="50"/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <TextBox Grid.Row="1" Width="200" Style="{StaticResource MaterialDesignFloatingHintTextBox}" materialDesign:HintAssist.Hint="Имя"/>
        <TextBox Grid.Row="2" Width="200" materialDesign:HintAssist.Hint="@mail"/>
        <PasswordBox Grid.Row="3" Width="200" materialDesign:HintAssist.Hint="Пароль"/>
        <Button Grid.Row="4" Width="200" VerticalAlignment="Bottom" Content="Регистрация" Background="#dcc6b3" Foreground="White" Click="Button_Click"/>
    </Grid>
</UserControl>
